{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ES2022",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "dist",
      "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/__tests__"]
  }