{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "declaration": true,
      "outDir": "dist",
      "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }